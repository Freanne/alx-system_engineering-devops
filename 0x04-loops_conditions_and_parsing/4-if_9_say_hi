#!/usr/bin/env bash
# This script is displaying "Best School" 10 times, with "Hi" on a new line on the 9th iteration

# Initialize a counter variable
count=0

# Loop using while until count becomes 10
while [ $count -lt 10 ]; do
    if [ $count -eq 8 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi

    # Increment the counter
    ((count++))
done
